{
  "name": "coreclaw",
  "version": "0.1.0",
  "description": "Business-grade AI agent orchestration. Multiple conductors, structured workflows, container isolation.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "node --experimental-sqlite --import tsx/esm src/index.ts",
    "start": "node --experimental-sqlite dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t coreclaw-agent ./container/agent-runner"
  },
  "keywords": [
    "ai",
    "agents",
    "orchestration",
    "conductors",
    "business",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "dotenv": "^16.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
